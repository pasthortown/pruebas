          String valor1 = linea[x].substring(0, linea[x].indexOf("<espacio>"));
          String valor2 = linea[x].substring(linea[x].indexOf("<espacio>") + 9, linea[x].length());
          String cadena = String.format("%1$20s", new Object[] { valor1 });
          cadena = String.valueOf(cadena) + String.format("%1$7s", new Object[] { valor2 });
